{
  "manifest_version": 3,
  "name": "CSV変換くん",
  "version": "1.1.25",
  "description": "https://nakeruhanashi.com の Webページ上のテキストをいい感じにCSV変換します。",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "images/バットアイコン16.png",
      "48": "images/バットアイコン48.png",
      "128": "images/バットアイコン128.png"
    }
  },
  "icons": {
    "16": "images/バットアイコン16.png",
    "48": "images/バットアイコン48.png",
    "128": "images/バットアイコン128.png"
  },
  "host_permissions": [
    "https://nakeruhanashi.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
